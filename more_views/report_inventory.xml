    <report
        string="Inventory Label"
        id="action_report_inventory"
        model="stock.production.lot"
        report_type="qweb-pdf"
        name="more_views.report_inventory_label"
        file="more_views.report_inventory_label"
        paperformat="paperformat_045x036"
    />


<template id="report_inventory_label">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t>
                <div class="page" style="font-size:25px">
                    <table border="1"
                           style="padding:0;margin:0;">
                        <tr>
                            <td colspan="2" margin="20">
                                <span style="white-space:nowrap;float:left;width:200px" t-field="o.product_id.name"/>
                            </td>
                        </tr>
                        <!--<tr>-->
                            <!--<td>-->
                                <!--<img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'-->
                                    <!--% ('Code128', o.name, 600, 20)"-->
                                    <!--style="width:300px;height:20px;float:left"/>-->
                            <!--</td>-->
                        <!--</tr>-->
                        <tr>
                            <td>
                                <br></br>
                                <img src='/web/binary/company_logo' style="width:80px;height:80px;vertical-align:center"/><br></br>
                                Serial:
                                <span style="white-space:nowrap;display:inline-block"  t-field="o.name"/>
                            </td>
                            <td>
                                <img  t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s'
                                    % ('QR', 'odoo.fablab-karlsruhe.de/prod/' + o.name, 1600, 1600)"
                                    style="width:180px;height:180px;vertical-align:top;align:left"/>

                            </td>
                        </tr>
                    </table>
                </div>
            </t>
        </t>
    </t>
